		<shape >
		   <corners android:topLeftRadius="7dp"  android:bottomLeftRadius="7dp"/>
		    <solid android:color="#888"/>
		</shape>        
    </item>
    <item android:state_pressed="true">
		<shape >
		    <corners android:topLeftRadius="7dp"  android:bottomLeftRadius="7dp"/>
		    <solid android:color="#888"/>
		</shape>        
    </item>
    <item >
