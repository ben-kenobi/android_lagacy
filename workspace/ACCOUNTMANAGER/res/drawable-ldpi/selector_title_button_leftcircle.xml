         <corners android:topLeftRadius="7dp"  android:bottomLeftRadius="7dp"/>
         <gradient android:startColor="#2558"   android:centerColor="#288a"  android:endColor="#2fff" android:angle="90"/>
		    <stroke android:width="0.7dp"  android:color="#7888"/>
		    </shape>
    </item>
