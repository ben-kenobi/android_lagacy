<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:startColor="#00BFFF" android:endColor="#00BFFF"/>
            <size android:height="64dp" android:width="320dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:startColor="#00BFFF" android:endColor="#00BFFF"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
    <item>
        <shape >
		    <gradient android:angle="180" android:startColor="@color/deepskyblued"  android:endColor="@color/deepskyblued" />
		    <corners android:radius="7dp"/>
		</shape>
    </item>
</selector>