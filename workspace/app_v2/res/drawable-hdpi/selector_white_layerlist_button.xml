<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape >
	        <corners android:radius="5dp"/>
	        <solid android:color="#888"/>
	    </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
	        <corners android:radius="5dp"/>
	        <solid android:color="#888"/>
	    </shape>
        
    </item>
	<item >
	    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">    
    <item    android:top="2dp" android:left="1dp"  >
        <shape >
	        <corners android:radius="5dp"/>
	        <solid android:color="#6666"/>
	    </shape>
   </item>
     <item android:bottom="1dp"    android:right="1dp" >
          <shape >
	        <corners android:radius="5dp"/>
	         <gradient android:angle="90" android:startColor="#f3f3f3" android:centerColor="#f9f9f9"
                android:endColor="#fefefe"/>
	        <stroke android:width="0.5dp"  android:color="#5aaa"/>
	    </shape>
    </item>
 </layer-list>
	</item>
</selector>