<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_enabled="false">
        <shape >
            <corners android:radius="9dp"/>
            <gradient android:startColor="#666" android:centerColor="#bbb"  
                android:endColor="#666" android:angle="90"/>
            <stroke android:width="0.5dp" android:color="#ff7f00"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient  android:startColor="#33aa0000"  android:centerColor="#66aa3333" 
         android:endColor="#99ffffff" android:angle="90"/>
    <corners android:topLeftRadius="6dp"  android:topRightRadius="6dp" 
        android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
    <stroke android:width="0.5dp" android:color="#33555555" />
</shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient  android:startColor="#20aa0000"  android:centerColor="#39aa0000" 
         android:endColor="#99000000" android:angle="270"/>
    <corners android:topLeftRadius="6dp"  android:topRightRadius="6dp" 
        android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
    <stroke android:width="0.5dp" android:color="#33555555"  />
    
</shape>
    </item>
	<item android:drawable="@drawable/shape_button_shadow"></item>
</selector>