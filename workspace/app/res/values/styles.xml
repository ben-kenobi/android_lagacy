<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="uniform_titlebar_style">
	    <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">43dp</item>
<!-- 	      <item name="android:background">@drawable/top_bg_orange</item> -->
			<item name="android:background">@drawable/bg_top_blue</item>
	</style>
    <style  name="top_shadow" >
        <item name="android:shadowColor" >#88333333</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>    </style>
      <style  name="top_right_shadow" >
        <item name="android:shadowColor" >#aa333333</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>
    <style  name="bottom_left_shadow" >
        <item name="android:shadowColor" >#88333333</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="title_text_style" parent="@style/top_right_shadow">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="home_bottom_tab">
          <item name="android:textSize">@dimen/tab_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/selector_home_bottom_tab</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
     <style name="checkboxes_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/selector_checkboxes</item>
	<item name="android:drawableRight">@android:drawable/arrow_down_float</item>
	<item name="android:drawableLeft">@android:drawable/ic_menu_view</item>
	<item name="android:paddingRight">6dp</item>
	<item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="listview_inner_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center|left</item>
	<item name="android:drawableRight">@drawable/ic_arrow</item>
	<item name="android:paddingRight">0dp</item>
	<item name="android:paddingLeft">15dp</item>
	<item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="edittext_style"  parent="@style/bottom_left_shadow">
          <item name="android:textColor">#ee000000</item> 
           <item name="android:gravity">center|left</item>
           <item name="android:paddingRight">2dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
         <item name="android:singleLine">true</item>
         <item name="android:background">@drawable/shape_search</item>
         <item name="android:drawableLeft">@android:drawable/ic_menu_search</item>
    </style>
    <style name="base_text_style" >
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#555</item>    </style>
    <style name="cart_pricetext_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">#ee7600</item>
    </style>
    <style name="scrollStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:divider">@null</item>
        <item name="android:cacheColorHint">@null</item>
    </style>
    <style name="moneyStyle">
        <item name="android:textColor">#ee7600</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="payOptionsStyle">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:drawableRight">@drawable/ic_arrow</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="payInfoListStyle">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>
    <style name="marqueeTextStyle_nofocus">
        <item name="android:marqueeRepeatLimit">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>    </style>
    <style name="registerEditTextStyle">
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="android:paddingLeft">10dp</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">40dp</item>
       <item name="android:singleLine">true</item>
       <item name="android:maxLength">18</item>
    </style>
       <style name="loginEditTextStyle">
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:textColorHint">#aaa</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">48dp</item>
       <item name="android:singleLine">true</item>
       <item name="android:maxLength">18</item>
    </style>
    <style name="textDisposerStyle">
         <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_alignParentRight">true</item>
       <item name="android:layout_marginRight">8dp</item>
       <item name="android:background">@drawable/bg_red_oval</item>
		<item name="android:padding">4dp</item>
		<item name="android:src">@android:drawable/presence_offline</item>
		<item name="android:visibility">gone</item>       
    </style>
    <style name="textConfirmStyle">
         <item name="android:layout_width">22dp</item>
       <item name="android:layout_height">22dp</item>
       <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_marginRight">8dp</item>
       <item name="android:background">@drawable/selector_oval_button_green</item>
		<item name="android:text">âˆš</item>
		<item name="android:textColor">#fff</item>
		<item name="android:visibility">gone</item>       
    </style>
    <style name="registerSequenceTextHintStyle">
           <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:paddingBottom">3dp</item>
       <item name="android:textSize">@dimen/font_size_mplus</item>
       <item name="android:textColor">#4169e1</item>
       <item name="android:typeface">sans</item>
    </style>

</resources>