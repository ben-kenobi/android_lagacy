<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_stronger_horizontal"
    android:orientation="vertical"
    android:showDividers="middle" >
    
    <RelativeLayout
        style="@style/uniform_titlebar_style"
        android:paddingRight="10dp" >

         <ImageButton
            android:id="@+id/imageButton1"
             style="@style/title_back_style"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/imageButton1"
            android:background="#3333" />

        <TextView
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:shadowDx="-1.1"
            android:text="@string/mine"
            android:textColor="#ffffff"
            android:textSize="23sp" />

        <Button
            android:id="@+id/button2"
            style="@style/title_text_style"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_top_button"
            android:text="@string/modifyPassword"
            android:textSize="@dimen/font_size_s" />

    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8bbb" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="0"
        android:background="#aa4876ff"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView2"
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:text="@string/notLoginYet"
            android:textColor="#ccffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/shadow_stroke_bg_shape" >

            <Button
                android:id="@+id/button1"
                style="@style/title_text_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/selector_transparent_white_lowradius"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text="@string/loginnow"
                android:textColor="#ccffffff"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shadow_horizontal" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shadow_vertical" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0"
        android:background="@color/search_container_bg"
        android:divider="@drawable/divider_vertical"
        android:dividerPadding="1dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:showDividers="middle" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:paddingRight="25dp" >

 <FrameLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_centerVertical="true"
     android:layout_marginRight="22dp"
     android:background="@drawable/shadow_oval"
     android:paddingBottom="2dp" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_oval_grey"
                android:padding="2dp"
                android:src="@android:drawable/ic_menu_always_landscape_portrait" />
  </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="@string/myAccount"
                android:textColor="#888888"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="25dp" >

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:background="@drawable/shadow_oval"
      android:paddingBottom="2dp" >

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_oval_orange"
                android:padding="2dp"
                android:src="@android:drawable/btn_star_big_on" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >
 <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="0"
                android:textColor="#888"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myCollection"
                android:textColor="#888"
                android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/search_container_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_bg_lowradius" 
            style="@style/scrollStyle">

        </ListView>

    </FrameLayout>

</LinearLayout>