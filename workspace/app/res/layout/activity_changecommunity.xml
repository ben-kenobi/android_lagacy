<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/uniform_titlebar_style" >

              <ImageButton
            android:id="@+id/imageButton1"
            style="@style/title_back_style"/>

			<View
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_toRightOf="@id/imageButton1"
			    android:background="#3fff" />

        <TextView
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/choosecommunity"
            android:textSize="@dimen/title_font_size" />

    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8bbb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#66dddddd"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <EditText
            android:id="@+id/editText1"
            android:layout_centerInParent="true"
          		  android:ems="10"
          		 style="@style/edittext_style"
            android:hint="@string/hint_community"
       >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/imageButton3"
             style="@style/textDisposerStyle"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/stroke_grey"
        android:paddingBottom="1dp"
        android:paddingTop="1dp" >

        <TextView
            style="@style/title_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/style_grey_row"
            android:gravity="left|center"
            android:paddingLeft="12dp"
            android:text="@string/locatecommunity"
            android:textSize="@dimen/row_font_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#66dddddd"
        android:paddingLeft="20dp"
        android:paddingRight="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:text="请开启定位后重试"
            android:textColor="#aa000000"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:background="@drawable/selector_oval_grey"
            android:padding="2dp"
            android:src="@android:drawable/ic_menu_rotate" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/stroke_grey"
        android:paddingBottom="1dp"
        android:paddingTop="1dp" >

        <TextView
            style="@style/title_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/style_grey_row"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:text="@string/communities"
            android:textSize="@dimen/row_font_size" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/scrollStyle" >
    </ListView>

</LinearLayout>