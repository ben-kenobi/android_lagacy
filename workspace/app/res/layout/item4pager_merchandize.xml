<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="9dp"
    android:paddingTop="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke_lowradius_white"
        android:orientation="vertical"
        android:padding="7dp" >

        <TextView
            android:id="@+id/textView2"
            style="@style/title_text_style"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="$$"
            android:textColor="#222"
            android:textSize="@dimen/font_size_l" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="2"
                android:textSize="@dimen/font_size_m" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="￥19.80"
                android:textColor="#ff7f00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/textView3"
                android:text="原价￥20.xx"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:drawableLeft="@android:drawable/star_big_off"
                android:gravity="center_vertical"
                android:text="33人" 
                style="@style/base_text_style"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp" >

            <Button
                android:id="@+id/button1"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                style="@style/addButtonStyle"
                  android:layout_marginRight="15dp"
                 />

            <Button
                android:id="@+id/button2"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
               style="@style/minusButtonStyle"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_white_button"
                android:text="@string/checkDetail"
                android:textColor="#8333"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>