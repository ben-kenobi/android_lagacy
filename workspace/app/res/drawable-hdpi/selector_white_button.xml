<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
             <corners android:radius="4dp"/>
            <gradient android:angle="90" android:startColor="#a333" 
                android:endColor="#0fff"/>
            <stroke android:color="#5333" android:width="0.5dp"/>
        </shape>
    </item>
    <item >
        <shape >
            <corners android:radius="4dp"/>
            <gradient android:angle="90" android:startColor="#3999" android:centerColor="#fff"
                android:endColor="#3999"/>
            <stroke android:color="#3333" android:width="0.5dp"/>
        </shape>
    </item>

</selector>