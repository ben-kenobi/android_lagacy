<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape  >
    <stroke android:width="0.5dp" android:color="#a0000000"/>
    <solid android:color="#a0000000"/>
</shape>
    </item>
      <item android:state_pressed="true">
          <shape >
    <stroke android:width="0.5dp" android:color="#50000000"/>
    <solid android:color="#50000000"/>
</shape>
     </item>
     <item>
         <shape >
     <stroke android:width="0.3dp" android:color="#33000000"/>
    <gradient android:startColor="#f0000000" android:endColor="#00000000" android:angle="90"/>

</shape>
     </item>
    
</selector>