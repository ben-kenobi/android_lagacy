<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:startColor="#66dd0000" android:endColor="#ddff0000" android:type="radial"
                android:gradientRadius="50.0" />
            <stroke android:width="2dp" android:color="#88888888" />
        </shape>
    </item>
    <item >
        <shape android:shape="oval">
            <gradient android:startColor="#55dd0000" android:endColor="#aaff0000" android:type="radial"
                android:gradientRadius="50.0" />
            <stroke android:width="2dp" android:color="#ffffff" />
        </shape>
    </item>
</selector>