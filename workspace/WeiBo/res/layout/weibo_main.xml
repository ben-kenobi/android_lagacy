<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical"
     android:background="@color/lightgray" >
	 <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="46dp"
          android:background="@drawable/top_bar_shape">

        <ImageButton
            android:id="@+id/ib_weibo_back"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/onclick_button_selector"
            android:src="@android:drawable/ic_menu_revert" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:textColor="@android:color/white"
             android:textSize="21sp"
             android:text="帐号管理" />

         <ImageButton
             android:id="@+id/imageView4"
             android:layout_width="wrap_content"
             android:layout_height="32dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
             android:src="@android:drawable/ic_dialog_info"
             android:background="@drawable/onclick_button_selector" />
 
	</RelativeLayout>

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="10dp"
	     android:orientation="vertical" >

	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="基本信息："
	         android:textSize="16sp" />

	     <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="80dp"
	         android:gravity="center_vertical" >

	         <ImageView
	             android:id="@+id/imageView1"
	             android:layout_width="86dp"
	             android:layout_height="86dp"
	             android:layout_marginLeft="50dp"
	             android:src="@drawable/nexus" />

	         <LinearLayout
	             android:layout_width="wrap_content"
	             android:layout_height="match_parent"
	             android:layout_marginLeft="25dp"
	             android:gravity="center_vertical"
	             android:orientation="vertical" >

	             <TextView
	                 android:id="@+id/textView4"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:textSize="16sp" />

	             <TextView
	                 android:id="@+id/textView5"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:textSize="16sp" />

	         </LinearLayout>

	     </LinearLayout>

	 </LinearLayout>

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:background="@drawable/corner_list_bg"
	     android:orientation="vertical" >

	     <LinearLayout
	         android:id="@+id/ll_setting_accmana_changepwd"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="@drawable/onclick_textview_selector"
	         android:padding="8dp" >

	         <TextView
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:text="修改密码"
	             android:textSize="16sp" />

	         <ImageView
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/app_arrow_small" />
	     </LinearLayout>

	     <View
	         android:layout_width="fill_parent"
	         android:layout_height="1dp"
	         android:background="@android:drawable/button_onoff_indicator_off" />

	     <LinearLayout
	         android:id="@+id/ll_setting_accmana_changephone"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="@drawable/onclick_textview_selector"
	         android:padding="8dp" >

	         <TextView
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:text="更换手机"
	             android:textSize="16sp" />

	         <ImageView
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/app_arrow_small" />
	     </LinearLayout>
	 </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@android:drawable/button_onoff_indicator_off" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="分享设置："
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/corner_list_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_sina_sso"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/onclick_textview_selector"  >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="新浪微博"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sina_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未绑定"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/button_onoff_indicator_off" />

        <LinearLayout
            android:id="@+id/ll_tecent_sso"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/onclick_textview_selector"  >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tecent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="腾讯微博"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tecent_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未绑定"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>