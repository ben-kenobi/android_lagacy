<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     style="@style/upomp_lthj_scrollview_big">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/upomp_lthj_layout_padding"
    android:orientation="vertical" >
   	<com.unionpay.upomp.lthj.widget.CustomInputView 
	    style="@style/upomp_lthj_comstominput"
	    android:text="@string/upomp_lthj_old_pwd" android:id="@id/upomp_lthj_old_pwd_input" android:hint="@string/upomp_lthj_input_char_hint"/>
	<com.unionpay.upomp.lthj.widget.CustomInputView
	    style="@style/upomp_lthj_comstominput" android:text="@string/upomp_lthj_new_pwd" android:id="@id/upomp_lthj_new_pwd_input" android:hint="@string/upomp_lthj_input_char_hint"/>
	<com.unionpay.upomp.lthj.widget.CustomInputView
	    style="@style/upomp_lthj_comstominput" android:text="@string/upomp_lthj_confirm_pwd" android:id="@id/upomp_lthj_confirm_pwd_input" android:hint="@string/upomp_lthj_input_char_hint"/>
	<ImageView android:layout_height="1px" android:layout_width="fill_parent" android:background="@drawable/upomp_lthj_gray_line" android:layout_marginBottom="@dimen/upomp_lthj_margin_top"/>
    <LinearLayout style="@style/upomp_lthj_info_layout" android:orientation="vertical">
       <com.unionpay.upomp.lthj.widget.LineFrameView 
           android:layout_width="fill_parent" android:layout_height="wrap_content"
           android:src="@drawable/upomp_lthj_mobile_icon"
           android:hint="@string/upomp_lthj_mobile"
           android:id="@id/upomp_lthj_mobile_number_view"
           />
	</LinearLayout>
	 <RelativeLayout style="@style/upomp_lthj_input_layout" >
         <EditText style="@style/upomp_lthj_input_edittext" android:hint="@string/upomp_lthj_mobile_mac_hint" android:layout_centerVertical="true" android:id="@id/upomp_lthj_mobilemac_edit" android:inputType="phone" android:maxLength="6"/>
         <Button style="@style/upomp_lthj_verifycode_btn" android:layout_alignParentRight="true"  android:layout_centerVertical="true" android:id="@id/upomp_lthj_get_mac_btn" android:text="@string/upomp_lthj_get_mac"/>
     </RelativeLayout>
    <Button style="@style/upomp_lthj_button_big_single" android:text="@string/upomp_lthj_ok" android:id="@id/upomp_lthj_button_ok"/>
</LinearLayout>
</ScrollView>