    	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="25dip" android:layout_alignParentBottom="true" android:id="@id/upomp_lthj_rel_above_bottom">
