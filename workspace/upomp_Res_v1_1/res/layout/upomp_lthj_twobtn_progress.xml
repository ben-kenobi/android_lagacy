<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical"
	>
<RelativeLayout
    style="@style/upomp_lthj_dialog"
	>
	<RelativeLayout style="@style/upomp_lthj_dialog_content" android:orientation="vertical">
