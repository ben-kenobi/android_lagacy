                android:layout_toRightOf="@id/textView2"
                android:layout_toLeftOf="@id/imageButton2"
                android:hint="分组"                />

            <Button
                android:id="@+id/button2"
                android:layout_alignRight="@id/editText2"
                style="@style/textDisposerStyle" />

                

