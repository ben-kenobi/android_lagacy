<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".BufferFragmentActivity" >

    <!-- MapView layout and initial extent -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/geometrytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_weight="0.03"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/point" />

            <RadioButton
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />

            <RadioButton
                android:id="@+id/polygon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/polygon" />
        </RadioGroup>
        
        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <SeekBar
            android:id="@+id/distance"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.61" />

        <TextView
            android:id="@+id/bufferdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="@string/distance_meters"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/buffer"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="@string/buffer" />

        <Button
            android:id="@+id/reset"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="@string/reset" />
    </LinearLayout>

    <com.esri.android.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>