<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="@dimen/upomp_lthj_num_sign_keyboard_padding">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.0">
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize" android:id="@id/upomp_lthj_keyboard_button1"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize" android:id="@id/upomp_lthj_keyboard_button2"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize" android:id="@id/upomp_lthj_keyboard_button3"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize" android:id="@id/upomp_lthj_keyboard_button4"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:background="@drawable/upomp_lthj_keybtn" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.0">
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
			android:id="@id/upomp_lthj_keyboard_button5" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.0"
			android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
			android:id="@id/upomp_lthj_keyboard_button6" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.0"
			android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
			android:id="@id/upomp_lthj_keyboard_button7" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.0"
			android:background="@drawable/upomp_lthj_keybtn" />
		<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
			android:id="@id/upomp_lthj_keyboard_button8" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.0"
			android:background="@drawable/upomp_lthj_keybtn" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.0">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0">
			<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
				android:id="@id/upomp_lthj_keyboard_button9" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight="1.0"
				android:background="@drawable/upomp_lthj_keybtn" />
			<Button android:textSize="@dimen/upomp_lthj_keyboard_fontsize"
				android:id="@id/upomp_lthj_keyboard_button0" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight="1.0"
				android:background="@drawable/upomp_lthj_keybtn" />
		</LinearLayout>
		<Button android:layout_width="fill_parent" android:id="@id/upomp_lthj_keyboard_buttonC"
			android:text="清除" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:background="@drawable/upomp_lthj_keybtn" />
	</LinearLayout>
</LinearLayout>
