<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >            
            <gradient android:startColor="@color/skyblue" android:endColor="@color/skyblue"/>
        </shape> 
    </item>
    <item>      
        <shape android:shape="rectangle">
		    <gradient android:angle="180" android:startColor="@android:color/white"  android:endColor="@android:color/white" />
		    <stroke android:color="@android:color/black" android:width="0.1dp"/>
		</shape> 
    </item>
</selector>