<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:startColor="#00BFFF" android:endColor="#00BFFF"/>
            <size android:height="64dp" android:width="320dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:startColor="@color/skyblue" android:endColor="@color/skyblue"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:drawable="@android:drawable/editbox_background">
    </item>
</selector>