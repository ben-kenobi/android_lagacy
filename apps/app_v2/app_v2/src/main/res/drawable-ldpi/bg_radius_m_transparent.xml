<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <gradient android:centerColor="#cfff" android:startColor="#6fff" android:endColor="#6fff"
                android:angle="90"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1.5dp" android:color="#8888"/>
        </shape>
    </item>
    <item >
        <shape >
                 <gradient android:centerColor="#cfff" android:startColor="#9fff" android:endColor="#9fff"
                android:angle="90"/>
            <corners android:radius="8dp"/>
            <stroke android:width="0.8dp" android:color="#8888"/>
        </shape>
    </item>

</selector>