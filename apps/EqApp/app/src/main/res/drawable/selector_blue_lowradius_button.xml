<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape >
	        <corners android:radius="3dp"/>
	        <solid android:color="#888"/>
	    </shape>
    </item>
	<item android:state_selected="true">
		<shape >
			<corners android:radius="3dp"/>
			<solid android:color="#f66"/>
		</shape>

	</item>
    <item android:state_pressed="true">
        <shape >
	        <corners android:radius="3dp"/>
	        <solid android:color="#ff3570a5"/>
	    </shape>
        
    </item>
	<item >
	    <shape >
	        <corners android:radius="3dp"/>
	         <gradient android:angle="90" android:startColor="#ff3570f5" android:centerColor="#ff3570f5"
                android:endColor="#ff3570f5"/>
	        <stroke android:width="0.5dp"  android:color="#8bbb"/>
	    </shape>
	    
	</item>
</selector>