    <style name="plan_popupwindow_anim" >
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item><!--是否浮动-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowNoTitle">true</item><!--不显示标题栏-->
        <item name="android:background">@null</item><!--背景-->
        <item name="android:windowBackground">@null</item><!--窗口背景-->
        <item name="android:backgroundDimEnabled">true</item><!--显示模板-->
    </style>

    <!--表单表格行基本样式-->
    <style name="form_tab_row_base">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- 表单文本框基本样式 -->
    <style name="form_tv_base">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 表单编辑框基本样式 -->
    <style name="form_edit_base">
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:padding">5sp</item>
    </style>

    <!-- 表单下拉框基本样式 -->
    <style name="form_spnr_base">
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="rl_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/selector_rowbg</item>
        <item name="android:clickable">true</item>

    </style>
    <style name="rl_row_et_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_alignParentRight">true</item>

    <item name="android:textColor">@color/color_lighterText</item>
    </style>

    <style name="rb_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/color_darkerText</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
</resources>
